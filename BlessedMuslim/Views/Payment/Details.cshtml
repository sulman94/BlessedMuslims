@model BlessedMuslim.Models.PaymentDetails;
@{
    ViewData["Title"] = "View Payment Details";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h6>View Payment Details</h6>
        <hr />
        <div class="row">

            <div class="col-12 col-md-6">
                <h6>Attachment</h6>
                <div class="input-group input-group-sm mb-3">
                    <img id="user_img" alt="N/A"
                         height="250"
                         width="250"
                         style="border: 1px solid ; float: right; margin-bottom: 20px; " src="~/Documents/@Model.Attachment" />
                </div>

            </div>
            <div class="col-12 col-md-6">
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text width-100" id="inputGroup-sizing-sm">Retailer</span>
                    </div>
                    @Html.DropDownListFor(model => model.RetailerId, (IEnumerable<SelectListItem>)ViewBag.RetailersId, "--- Select Retailer ---", new { @class = "form-control", @disabled = "disabled" })

                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text width-100" id="inputGroup-sizing-sm">Payment Mode</span>
                    </div>
                    @Html.DropDownListFor(model => model.PaymentMode, (IEnumerable<SelectListItem>)ViewBag.PaymentMode, "--- Select Payment Mode ---", new { @class = "form-control", @disabled = "disabled" })

                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text width-100" id="inputGroup-sizing-sm">Payment Status</span>
                    </div>
                    @Html.DropDownListFor(model => model.PaymentStatus, (IEnumerable<SelectListItem>)ViewBag.PaymentStatus, "--- Select Payment Status ---", new { @class = "form-control", @disabled = "disabled" })

                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text width-100" id="inputGroup-sizing-sm">Details</span>
                    </div>
                    @Html.EditorFor(model => model.Details, new
                    {
                        htmlAttributes =
                        new { @class = "form-control", required = "required", @disabled = "disabled" }
                    })
                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text width-100" id="inputGroup-sizing-sm">Balance</span>
                    </div>
                    @Html.EditorFor(model => model.AmountDue, new
                    {
                        htmlAttributes =
                        new { @class = "form-control", required = "required", @disabled = "disabled" }
                    })
                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text width-100" id="inputGroup-sizing-sm">Amount Paid</span>
                    </div>
                    @Html.EditorFor(model => model.AmountPaid, new
                    {
                        htmlAttributes =
                        new { @class = "form-control", required = "required", @disabled = "disabled" }
                    })
                </div>
            </div>
        </div>

        @if (!String.IsNullOrEmpty(ViewBag.error))
        {
            <div class="mt-2">
                <div class="alert alert-danger" role="alert">
                    @ViewBag.error
                </div>
            </div>
        }

        @if (!String.IsNullOrEmpty(ViewBag.result))
        {
            <div class="mt-2">
                <div class="alert alert-success" role="alert">
                    @ViewBag.result
                </div>
            </div>
        }

    </div>
}

